{
  "expo": {
    "name": "kalk-tablet-app",
    "slug": "kalk-tablet-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kalktabletapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Moja Apka PWA",
      "shortName": "Mnoż",
      "startUrl": "/",
      "display": "standalone",
      "backgroundColor": "#ffffff",
      "themeColor": "#000000",
      "description": "Krótki opis mojej wspaniałej aplikacji PWA.",
      "icons": [
        {
          "src": "./assets/images/bober.jpg",
          "sizes": "204x192",
          "type": "image/jpeg"
        }
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
